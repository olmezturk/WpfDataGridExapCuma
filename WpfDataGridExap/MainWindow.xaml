<Window x:Class="WpfSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="432.513" Width="613.86" Loaded="Window_Load">
    <Grid Margin="0,10,0,-1" HorizontalAlignment="Left" Width="604">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FF00FFFA" Offset="1"/>
                <GradientStop Color="White"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ComboBox x:Name="cmbBoxListe" HorizontalAlignment="Left" Margin="29.71,55,0,0" VerticalAlignment="Top" Width="120" Height="50" SelectionChanged="ComboBox_SelectionChanged" Grid.Column="1">
            <ComboBoxItem>Item 1</ComboBoxItem>
            <ComboBoxItem>Item 2</ComboBoxItem>
            <ComboBoxItem>Item 3</ComboBoxItem>
            <Button Name="btntikla" Width="100" Height="50" Content="Tıkla" Click="btntikla_Click" Background="#FF004CFF" FontWeight="Bold" FontSize="22" FontFamily="{DynamicResource {x:Static SystemFonts.MessageFontFamilyKey}}" />
        </ComboBox>
        <Label x:Name="label" Content="Ad" HorizontalAlignment="Left" Margin="53,79,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Soyad" HorizontalAlignment="Left" Margin="53,129,0,0" VerticalAlignment="Top" Height="31" Width="43"/>
        <TextBox Text="{Binding ElementName=tb1,Path=SeledtedItem.AD}" HorizontalAlignment="Left" Height="23" Margin="96,79,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox Text="{Binding ElementName=tb1,Path=SeledtedItem.SOYAD}" HorizontalAlignment="Left" Height="23" Margin="96,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <DataGrid x:Name="tb1" Grid.Column="0" AutoGenerateColumns="False" Margin="10,199,0,0" VerticalAlignment="Top" Height="170" HorizontalAlignment="Left" Width="277">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Ad" Width="*" Binding="{Binding AD}"/>
                <DataGridTextColumn Header="Soyad" Width="*" Binding="{Binding SOYAD}"/>

            </DataGrid.Columns>


        </DataGrid>
        <Button x:Name="button" Content="Giriş" HorizontalAlignment="Left" Margin="117,157,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
